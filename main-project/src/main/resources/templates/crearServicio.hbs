{{#partial "titulo"}}
    <title>Crear servicio</title>
{{/partial}}
{{#partial "imports"}}
    <script src="/js/manejoBloquesFormulario.js"></script>
{{/partial}}
{{#partial "contenido"}}
<div class="container mt-4 mb-4 altura-minima">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-3">Crear Servicio</h2>
            <hr>
            <form action="/servicios" method="POST" id="formGeo">
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="nombre">
                </div>
                {{#if establecimiento}}
                    <input type="hidden" value="{{establecimiento.id}}" name="establecimiento">
                {{/if}}
                <div id="bloquesDinamicos">
                    <div class="h5">Etiquetas</div>
                    <div class="dynamic-block">
                        <div class="mb-3">
                            <input type="text" class="form-control mb-3" name="tipo[]" placeholder="Tipo de etiqueta" required>
                            <input type="text" class="form-control mb-3" name="valor[]" placeholder="Valor de etiqueta" required>
                        </div>
                        <hr>
                    </div>
                </div>
                <div class="text-center">
                    <a class="btn btn-sm btn-danger" id="remove-service" href="#">Eliminar Ãºltima etiqueta</a>
                    <a class="btn btn-sm btn-success" id="add-service" href="#">Agregar etiqueta</a>
                </div>
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary">Crear servicio</button>
                    {{#if establecimiento}}
                        <a class="btn btn-secondary" href="/establecimientos/{{establecimiento.id}}">Volver a establecimiento</a>
                    {{/if}}
                </div>
            </form>
        </div>
    </div>
</div>

<datalist id="listaServicios">
</datalist>
{{/partial}}
{{> templates/base }}

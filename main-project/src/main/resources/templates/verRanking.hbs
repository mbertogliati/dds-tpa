{{#partial "titulo"}}
    <title>Ranking</title>
{{/partial}}
{{#partial "contenido"}}
<div class="container mt-4 mb-4 altura-minima">
    <div class="row justify-content-center mt-4">
        <div class="col-md-10">
            <h2 class="mb-2">Ranking de Entidades #{{ranking.id}}</h2>
            <h5 class="mb-2">Fecha: {{ranking.fechaHoraCreacion}}</h5>
            <p>{{ranking.descripcion}}</p>
        </div>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-5">
            <div class="table-responsive">
                <table class="table align-middle table-sm table-striped table-hover">
                    <thead class="table-dark">
                    <tr>
                        <th scope="col">Puntos</th>
                        <th scope="col">Entidad</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each ranking.puntosPorEntidad}}
                    <tr>
                        <td>{{puntos}}</td>
                        <td>{{entidad.nombre}}</td>
                    </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-10 text-center">
            <a href="/rankings" class="btn btn-secondary">Volver al listado</a>
        </div>
    </div>
</div>
{{/partial}}
{{> templates/base}}
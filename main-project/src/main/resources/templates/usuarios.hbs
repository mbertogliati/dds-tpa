{{#partial "titulo"}}
    <title>Administración usuarios</title>
{{/partial}}
{{#partial "contenido"}}
<div class="container mt-4 mb-4 altura-minima">
    <div class="row justify-content-center mt-4">
        <div class="col-md-10">
            <h2 class="mb-3">Administración de Usuarios</h2>
            <form method="GET" action="/usuarios">
                <div class="row">
                    <div class="col">
                        <label for="username" class="form-label">Buscar usuario por username:</label>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-sm-7 col-md-5">
                        <input class="form-control" type="text" name="username" id="username">
                    </div>
                    <div class="col-sm-2">
                        <button class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </form>
            <div class="table-responsive">
                <table class="table align-middle table-sm table-striped table-hover">
                    <thead class="table-dark">
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Mail</th>
                        <th scope="col">Teléfono</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each usuarios}}
                        <tr>
                            <td>{{personaAsociada.nombre}} {{personaAsociada.apellido}}</td>
                            <td>{{personaAsociada.email}}</td>
                            <td>{{personaAsociada.whatsapp}}</td>
                            <td class="text-center"><a href="/usuarios/{{id}}/edit" class="btn btn-sm btn-warning">Editar</a></td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{{/partial}}
{{> templates/base}}
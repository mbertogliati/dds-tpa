<div class="container mt-4 mb-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-3">Cierre de Incidentes</h2>
            <hr>
            <form action="/cierreIncidente" method="POST">
                <select class="form-select mb-3" name="provincia" required>
                    <option>Provincia</option>
                    {{#each provincias}}
                        <option value="{{id}}">{{nombre}}</option>
                    {{/each}}
                </select>
                <select class="form-select mb-3" name="departamento" required>
                    <option>Departamento</option>
                    {{#each departamentos}}
                        <option value="{{id}}">{{nombre}}</option>
                    {{/each}}
                </select>
                <select class="form-select mb-3" name="localidad" required>
                    <option>Localidad</option>
                    {{#each localidades}}
                        <option value="{{id}}">{{nombre}}</option>
                    {{/each}}
                </select>
                <select class="form-select mb-3 dynamic-block" name="incidente" required>
                    <option>Incidente</option>
                    {{#each incidentes}}
                        <option value="{{id}}">
                            {{#each serviciosAfectados}}
                                {{#if @first}}
                                    {{servicio.establecimiento.nombre}} - {{servicio.nombre}}
                                {{else}}
                                    - {{servicio.nombre}}
                                {{/if}}
                            {{/each}}
                        </option>
                    {{/each}}
                </select>
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary">Cerrar incidente</button>
                </div>
            </form>
        </div>
    </div>
</div>


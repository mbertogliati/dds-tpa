{{#partial "titulo"}}
    <title>Cerrar incidente</title>
{{/partial}}
{{#partial "imports"}}
    <script src="/js/manejoFormularioCierreIncidente.js"></script>
{{/partial}}
{{#partial "contenido"}}
<div class="container mt-4 mb-4 altura-minima">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-3">Cierre de Incidentes</h2>
            <hr>
            <form action="/cierreIncidente" method="POST">
                <select class="form-select mb-3" name="provincia" id="provincia" required>
                    <option>Provincia</option>
                    {{#each provincias}}
                        <option value="{{id}}">{{nombre}}</option>
                    {{/each}}
                </select>
                <select class="form-select mb-3" name="departamento" id="departamento" required>
                    <option>Departamento</option>
                </select>
                <select class="form-select mb-3" name="localidad" id="localidad" required>
                    <option>Localidad</option>
                </select>
                <select class="form-select mb-3 dynamic-block" name="incidente" id="incidente" required>
                    <option>Incidente</option>
                </select>
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary">Cerrar incidente</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{/partial}}
{{> templates/base }}
